---
import MainLayout from "../layout/MainLayout.astro";
import Instagram from "../components/Instagram.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
---

<MainLayout title="Dansestudiet">
	<section class="grid_1">
		<div>
			<img src="/img/forside.webp" alt="Billede fra Dansestudiet">
		</div>
		<div>
			<h1>Velkommen til dansestudiet</h1>
			<p></p>
			<Button variant="secondary">Bliv en del af troppen!</Button>
		</div>
	</section>
	<section>
		<div>
			<h2></h2>
			<p></p>
			<Button variant="tertiary">Mød dem her</Button>
		</div>
	</section>
	<section class="grid_1">
		<Card
		img="/img/workshop.webp"
		title="Anna Zacho"
		description="Anna Zacho, medstifter af “The Edge Dance Space” kommer hjem fra London for at give en Commercial Performance workshop med lækker energi. Lad os danse sammen til den sidste MW i pr."
	</section>
	<section>
		<Instagram/>
	</section>
</MainLayout>

<style>
	.grid_1 {
		display: grid;
		grid-template-columns: 1fr 1fr;
	}

	/*Hero section*/ 


</style>
---
const {variant, title, description, img} = Astro.props
import Button from "./Button.astro";
---

<article class={variant}>
    <img src={img} alt="Billede over program fra dansestudiet">
    <h3>{title}</h3>
    <p>{description}</p>
    <Button variant="tertiary">Bliv en del af troppen!</Button>
</article>

<style>

    article {
        border-radius: var(--radius-rounded-1, 0.3125rem);
border: 5px solid var(--color-background-stroke-card, #196572);
background: var(--color-background-background-card, #FFF8E1);
margin-inline: auto;
color: var(--text);
    }
.primary {
display: inline-flex;
max-width: 32.1875rem;
height: 41.5625rem;
padding: var(--spacing-gap-card-padding-vertical, 2.5rem) var(--spacing-gap-card-padding-horizontal, 1.875rem);
flex-direction: column;
justify-content: center;
align-items: center;
gap: var(--spacing-gap-card-text, 1.875rem);
}

.secondary {
    display: flex;
width: 32.1875rem;
height: 41.5625rem;;
padding: var(--spacing-gap-card-padding-horizontal, 1.875rem) var(--spacing-gap-card-text, 1.875rem);
justify-content: center;
align-items: flex-start;
align-content: flex-start;
gap: 1.875rem var(--spacing-gap-card-text, 1.875rem);
flex-shrink: 0;
flex-wrap: wrap;
}

@media (max-width: 900px) {

    .primary {
max-width: 25rem;
height: 30rem;
gap: 1.5rem;
}

.secondary {
    max-width: 25rem;
height: 30rem;
gap: 1.5rem;
}

}

</style>
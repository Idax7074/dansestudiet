<header class="banner">
  <div class="logo">
    <a href="/"><img src="/public/logo.svg" alt=""></a>
  </div>
  <nav class="menu">
    <button class="toggle-btn" aria-label="Burgermenu">
      <span class="bar1"></span>
      <span class="bar2"></span>
      <span class="bar3"></span>
    </button>
    <ul>
      <li><a href="#">Workshop</a></li>
      <li>
        <a href="#">Praktisk</a>
      </li>
    </ul>
</header>

<script src="../scripts/burger.js"></script>

<style>
  header {
    top: 0;
    width: 100%;
    background: var(--color-background-primary);
    padding: 20px;
    z-index: 4;

    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  img {
    width: 25%;
    height: auto;
  }

  .toggle-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    display: none;
    min-width: 44px;
    min-height: 44px;
  }

  @media (min-width: 1201px) {

    .logo {
      padding-left: 7%;
    }

    nav {
      width: 100%;
      display: flex;
      justify-content: flex-end;
    }

    nav ul {
      list-style: none;
      display: flex;
      flex-direction: row;
    }

    nav li {
      float: left;
      position: relative;
      width: auto;

      list-style: none;
    }

    nav li:hover a {
      color: var(--black);
    }

    nav a {
      color: var(--color-text-nav);
      display: block;
      padding: 15px 70px;
      transition: all 0.25s ease;

      text-decoration: none;
      font-family: Lato;
      font-size: var(--Headline3-large);
      font-style: normal;
      font-weight: 700;
      line-height: normal;

    }

    nav a:active {
      color: var(--black);
    }

  }

  @media (max-width: 1200px) {
    .banner {
      background-color: var(--color-background-primary);
      padding: 2rem;

      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      align-items: center;
      gap: 20px 40px;
    }
    .menu.shown a {
      color: var(--color-text-nav);
      text-decoration: none;
      line-height: 1.5rem;
    }

    .menu.shown a:hover {
      color: var(--black);
    }

    .toggle-btn {
      display: block;
    }

    .toggle-btn span {
      display: block;
    }

    .menu.shown {
      display: contents;
    }

    .menu ul {
      display: none;
    }

    .menu.shown > ul {
      border-top: 1px solid var(--color-text-nav);
      padding-top: 1rem;
    }

    .menu.shown ul {
      display: flex;
      flex-flow: column;
      flex-basis: 100%;
      list-style: none;
      gap: 12px;
      font-size: 1.2rem;
    }
    .bar1,
    .bar2,
    .bar3 {
      width: 35px;
      height: 5px;
      background-color: black;
      margin: 6px 0;
      border-radius: 5px;
      transition: 0.4s;
    }

    .change .bar1 {
      transform: translate(0, 11px) rotate(-45deg);
    }

    .change .bar2 {
      opacity: 0;
    }

    .change .bar3 {
      transform: translate(0, -11px) rotate(45deg);
    }
  }

  @media (max-width: 500px) {
    .banner {
      padding-block: 1rem;
      padding-inline: 0.1rem;
    }
  }
</style>
